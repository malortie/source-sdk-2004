global proc paintSmooth()
{
if (! `contextInfo -q -ex paintSmoothTool`)
	{
	artSelectCtx 
		- n "paintSmoothTool"
		- i1 "paintSmooth.bmp"
		- ch 1
		- paintmode "screen"
		- projective 1
		- outline 1
		- outwhilepaint 1
		- ads 0
		- bsc "SelectEdgeMask"
		- asc "polySoftEdge -ch 1 -a 180";
	}
setToolTo paintSmoothTool;
}

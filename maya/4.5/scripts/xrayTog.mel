global proc xrayTog()

{

string $XRpanel = `getPanel -withFocus`;

int $XT1 = `modelEditor -q -xray $XRpanel`;

if ($XT1 == 1)

  modelEditor -e -xray 0 $XRpanel;

else
  modelEditor -e -xray 1 $XRpanel;
};

xrayTog;
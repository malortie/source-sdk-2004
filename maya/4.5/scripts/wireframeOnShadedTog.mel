global proc wireframeOnShadedTog()
	{
	string $XRpanel = `getPanel -withFocus`;

	int $XT1 = `modelEditor -q -wos $XRpanel`;

	if ($XT1 == 1)
		modelEditor -e -wos 0 $XRpanel;
	else
		modelEditor -e -wos 1 $XRpanel;
	}